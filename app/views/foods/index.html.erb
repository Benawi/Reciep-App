<h2 class="display-8 fw-bold my-2 text-center">List of Foods</h2>
<div class = "is-flex is-justify-content-end mx-6 ">
<%= render partial: "_partials/modals/food-modal", class: "button is-info is-dark m-4"%>

</div>
<div class="table-container mx-6">
  <table class="table is-bordered is-striped is-hoverable is-fullwidth ">
      <tr>
        <th>Food</th>
        <th>Measurement unit</th>
        <th>Unit price</th>
        <th>Actions</th>
      </tr>

    <tbody>
      <% @foods.each do |food| %>
        <tr>
        <td><%=food.name%></td>
        <td><%=food.measurement_unit%></td>
        <td><%=food.price%></td>
         <td><%= link_to "Delete", food, method: :delete ,class: "delete-btn is-danger is-small is-hover"%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
