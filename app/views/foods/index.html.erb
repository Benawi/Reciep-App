
<div class="container">
    <%= link_to "Add Food", new_food_path, class: "btn btn-primary" %>
  <table class="table">
    <thead>
      <tr>
        <th>Food</th>
        <th>Measurement Unit</th>
        <th>Price</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <td><%= food.name %></td>
          <td><%= food.measurement_unit %></td>
          <td><%= food.price %></td>
          <td>
            <%= link_to "Remove", foods_destroy_path(id:food.id), method: :delete, data: { confirm: "Are you sure you want to delete this food item?" }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
