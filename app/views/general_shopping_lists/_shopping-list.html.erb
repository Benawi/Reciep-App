  <div class="container d-flex flex-column">
    <div class="d-flex my-8">
      <%= link_to recipe_path(recipe.id), class: "btn btn-primary" do%>
        <span>Back To Recipe</span>
        <%end%>
    </div>
       <table class="table  w-50 text-center">
        <thead>
          <tr>
            <th scope="col">Amount of items to buy: <%= recipe.recipe_foods.count %></th>
            <th scope="col">Recipe Name: <%= recipe.name.capitalize%>items</th>
          </tr>  <tr>
            <th scope="col">Total amount: $ <%=  total(recipe.recipe_foods)%></th>
            <th scope="col"> Inventory Name: <%= Inventory.name.capitalize%></th>
          </tr>
        </thead>
        <table>
    <h3 >Shopping List</h3>
    <table class="table table-info table-striped w-100 text-center">
        <thead>
          <tr>
            <th scope="col">Food</th>
            <th scope="col">Quantity</th>
            <th scope="col">Value</th>
          </tr>
        </thead>
        <tbody>
      <% if recipe.recipe_foods.any? %>
        <% recipe.recipe_foods.each do |item|%>
          <tr>
            <th scope="row"><%= item.food.name%></th>
            <td><%= item.quantity%><%= item.food.measurement_unit%></td>
            <td>$ <%= item.food.price * item.quantity%></td>
          </tr>
         <%end%>
          <tr>
            <td colspan="2" class="table-active">Amount of items to buy</td>
            <td><%= recipe.recipe_foods.count %> items</td>
          </tr>
          <tr>
            <td colspan="2" class="table-active">Total: </td>
            <td>$ <%=  total(recipe.recipe_foods) %></td>
          </tr>
     <%end%>
      </tbody>
    </table>
  </div>  
