<h2 class="display-8 fw-bold my-2 text-center">Your List Of Recipes</h2>
<div class="m-3">
    <%= render partial: "_partials/modals/recipe-modal" %><br>
</div>

<div class="container =">
  <div class="row">
    <%if @recipes.empty?%>
     <p class="m-3 fw-bold">Your recipes list is empty try to add new recipe</p>
    <%else%>
      <% @recipes.each do |recipe| %>
        <%= render "_partials/cards/recipe-card", recipe: recipe %>
      <% end %>
  <% end %>
</div>

